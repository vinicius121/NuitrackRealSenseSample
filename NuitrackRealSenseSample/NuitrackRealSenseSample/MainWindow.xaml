<Window x:Class="NuitrackRealSenseSample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NuitrackRealSenseSample"
        mc:Ignorable="d"
        Title="NuitrackRealSense" Height="590" Width="700" Closing="Window_Closing">
    <Grid>
        <Button x:Name="NuitrackInitButton" Content="OpenSensor" HorizontalAlignment="Left" Margin="10,520,0,0" VerticalAlignment="Top" Width="75" Click="NuitrackInitButton_Click"/>
        <TextBlock x:Name="TextBlock" HorizontalAlignment="Left" Margin="10,540,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="14" Width="497"/>
        <Button Content="Change View" HorizontalAlignment="Left" Margin="90,520,0,0" VerticalAlignment="Top" Width="79" Click="btnChangeView_Click"/>
        <Viewbox Width="640" Height="480">
            <Grid>
                <Image Name="imgView"/>
                <Canvas Name="canvas" />
            </Grid>
        </Viewbox>
    </Grid>
</Window>
